#include <stdio.h>
#include <stdio.h>
#include <signal.h> // для работы с сигналами

// Функция обработки сигнала
void signal_handler(int signal) 
{
    switch (signal) {
        case SIGABRT:
            printf("Получен сигнал SIGABRT\n");
            break;
        case SIGFPE:
            printf("Получен сигнал SIGFPE\n");
            break;
        case SIGILL:
            printf("Получен сигнал SIGILL\n");
            break;
        case SIGINT:
            printf("Получен сигнал SIGINT\n");
            break;
        case SIGSEGV:
            printf("Получен сигнал SIGSEGV\n");
            break;
        case SIGTERM:
            printf("Получен сигнал SIGTERM\n");
            break;
    }
}

int main() 
{
    // Инициализация обработчика 
    signal(SIGABRT, signal_handler);
    signal(SIGFPE, signal_handler);
    signal(SIGILL, signal_handler);
    signal(SIGINT, signal_handler);
    signal(SIGSEGV, signal_handler);
    signal(SIGTERM, signal_handler);

    // Выполнение программы
    while (1) 
    {
        signal(SIGINT, signal_handler);//устанавливаем обработчик для сигнлана SIGINT
        //посылаем сигнал
        raise(SIGINT);
        printf("Hello, world\n");// Здесь можно выполнять какие-то 
        getch();
    }
    return 0;
}

