#include <stdio.h>

#define CALC_AVG(array, len) ({ \
    int sum = 0; \
    for (int i = 0; i < len; i++) { \
        sum += array[i]; \
    } \
    (float)sum / len; \
})

int main() 
{
    int nums[100];
    int count;

    printf("Введите числа через пробел: ");
    count = 0;
    while (scanf("%d", &nums[count]) == 1) {
        count++;
    }

    float avg = CALC_AVG(nums, count);

    printf("Среднее арифметическое: %.2f\n", avg);

    return 0;
}
