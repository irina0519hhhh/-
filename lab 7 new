#include <stdio.h>
#include <stdlib.h>
#include <string.h>

struct humen
{
    char name[20];
    char surname[20];
    int birth_year;
};


void sortHumen (struct humen arr[])
{
  int n = 4, i, j;
  //massive sorting
  for (i = 0; i < n - 1; i++)
	{
	  for (j = i + 1; j < n; j++)
		{
		  if (arr[i].birth_year > arr[j].birth_year)
			{
			  struct humen temp = arr[i];
			  arr[i] = arr[j];
			  arr[j] = temp;
			}
		}
	}
}

int main() {
    struct humen arr1[4], arr2[4];
    FILE *fp;

    fp = fopen("input.txt", "rt");
    int i;
    for (i = 0; i < 4; i++) 
    {
        fscanf(fp, "%s %s %d", arr1[i].name, arr1[i].surname, &arr1[i].birth_year);
    }
    fclose(fp);

    for (i = 0; i < 4; i++)
    {
	    arr2[i] = arr1[i];
    }
  
    sortHumen (arr2);

    printf("Unsorted array:\n");
    for (int i = 0; i < 4; i++) 
    {
        printf("%s %s %d\n", arr1[i].name, arr1[i].surname, arr1[i].birth_year);
    }

    printf("\nSorted array:\n");
    for (int i = 0; i < 4; i++) 
    {
        printf("%s %s %d\n", arr2[i].name, arr2[i].surname, arr2[i].birth_year);
    }

    return 0;
}
