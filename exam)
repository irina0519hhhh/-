
//создать файл input.txt, в который поместить N случайных чисел, размера, заданного с консоли. Массивы очистить. Закрыть файл
//открыть файл input.txt и прочитать все значения. 
//Все числа % на 5 заменить на слово "ПЯТЬ", % на 7 - на"СЕМЬ", % на 7 и 5 - "СЕМЬПЯТЬ". Вывести результат в файл output.txt
//замерить время работы программы


#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <time.h>

int main ()
{
    char line[256];
    
    FILE *file = fopen("input.txt", "wt");
    int n, i, j; 
    printf("Введите размер массива: ");
    scanf("%d", &n);

    int mass[n];
    for(i = 0; i < n; i++)
    {
        int r = rand() % 10;
        mass[i] = r;
    }
    for(j = 0; j < n; j++)
    {
        printf("%d\n", mass[j]);
    }
   
 // Записываем случайные числа в файл
    fprintf(file, "массив чисел:\n");
    for (int i = 0; i < n; i++) {
        fprintf(file, "%d\n", rand() % 10); // случайное число от 0 до 9
    }
   
    fclose(file);
     
     
    // // Открываем файл для чтения
    // file = fopen("input.txt", "rt");
    
    for (int k = 0; k < n; k++) {
        if (mass[k] % 7 == 0) {
            fprintf(file, "SEVEN ");
        } else if (mass[k] % 5 == 0) {
            fprintf(file, "FIVE ");
        } else {
            fprintf(file, "%d ", mass[k]);
        }
    }

     printf("Данные записаны в файл input.txt.\n");
    
    // for (int k = 0; k < n; k++)
    // {
    //     if(mass[k] % 5 == 0)
    //     {
    //         fprintf(file, "%s\n", str1);
    //     }
    //     if(mass[k] % 7 == 0)
    //     {
    //         fprintf(file, "%s\n", str2);
    //     }
    // }
    return 0;
}
