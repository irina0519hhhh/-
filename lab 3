/*ЗАДАНИЕ 3
Ввести с консоли строку символов произвольной длины (до 80 символов). Поменять в ней все маленькие символы ‘a’ и ‘b’ на заглавные и вывести на консоль полученную строку.*/

#include <stdio.h>
#include <stdlib.h>

int main()
{
    char str[80], result;
    scanf ("%s", &str);
    if (sizeof(str) <= 80)
    {
        str[0] = toupper(str[0]);
        for (int i = 0; i < sizeof(str); i++)
        {
            result = toupper(str[i]);
            printf("toupper(%s) = %s\n", str, result);
            return 0;
        }
    }
}









int main() {
char input[80];
fgets(input, 80, stdin);
int len = strlen(input);
for (int i = 0; i < len; i++) {
    if (input[i] >= 'a' && input[i] <= 'z') {
        input[i] -= 32;
    } else if (input[i] == 'A' || input[i] == 'B') {
        input[i] += 32;
    }
}

printf("%s", input);

return 0;
}



















#include "stdio.h"
int main(){ 
char s[81];
if(fgets(s,81,stdin))for(int i=0;s[i];i++)if(s[i]=='a'||s[i]=='b')s[i]-=32;
puts(s); return 0;} 
