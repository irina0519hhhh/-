#include <stdio.h>
/* ЗАДАНИЕ 1 
Объявить массив данных типа double размером 3 на 3. Ввести с консоли его значения, вывести на консоль сумму его элементов, 
расположенных на главной диагонали и сумму элементов, расположенных на  побочной диагонали.
*/

double matrix1[9], a11, a12, a13, a21, a22, a23, a31, a32, a33, sum_gen, sum_sec;

int main ()
{printf ("enter your first row: \n");
scanf("%lf %lf %lf", &a11, &a12, &a13);

printf ("enter your second row: \n");
scanf("%lf %lf %lf", &a21, &a22, &a23);

printf ("enter your third row: \n");
scanf("%lf %lf %lf", &a31, &a32, &a33);

sum_gen = a11 + a22 + a33;
sum_sec = a13 + a22 + a31;
printf("sum_gen = %lf\n", sum_gen);
printf("sum_sec = %lf", sum_sec);
return 0;
}



/* ЗАДАНИЕ 2 
Объявить массив данных типа int размером 2 на 2. Ввести с консоли его значения, вывести на консоль квадрат данной матрицы. */

#include <stdio.h>


int matrix2[4], i, a11, a12, a21, a22, sq11, sq12, sq21, sq22, square[4];

int main ()
{printf ("enter your first row: \n");
scanf("%d %d", &a11, &a12);

printf ("enter your second row: \n");
scanf("%d %d", &a21, &a22);

sq11 = a11*a11+a12*a21;
sq21 = a21*a11+a22*a21;
sq12 = a11*a12+a12*a22;
sq22 = a21*a12+a22*a22;


square[0] = sq11;
square[1] = sq12;
square[2] = sq21;
square[3] = sq22;

printf("\n");
printf("%d  %d\n%d %d", square[0], square[1], square[2], square[3]);

return 0;
}
